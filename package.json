{
  "name": "movie-list-app",
  "version": "1.0.0",
  "description": "Full-stack Movie List Application",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev",
    "start": "concurrently \"npm run backend:start\" \"npm run frontend:build\"",
    "backend:start": "cd backend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "install-deps": "cd backend && npm install && cd ../movie_listings && npm install",
    "clean": "cd backend && rmdir /s /q node_modules 2>nul & cd ../movie_listings && rmdir /s /q node_modules 2>nul"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "movie",
    "list",
    "react",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC"
}
